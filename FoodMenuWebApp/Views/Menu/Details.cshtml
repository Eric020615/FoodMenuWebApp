@model Dish
@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <h3>@Model.Name</h3>
    </div>
    <div class="d-flex justify-content-center">
        <img src="@Model.ImageUrl" style="width: 70%" />
    </div>
    <div class="d-flex justify-content-center">
        @Model.Price.ToString("N2") Dollars
    </div>
    <div class="d-flex justify-content-center">
        Ingredients:
        <ul>
            @foreach (var item in Model.DishIngredients)
            {
                <li>@item.Ingredient.Name</li>
            }
        </ul>
    </div>
    @* asp-action specific where want to route if want pass path variable used asp-action-id *@
    <a class="btn btn-info" asp-action="Index">Back to the Menu</a>
</div>